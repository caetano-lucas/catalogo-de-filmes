<dl>
    <dt>
      <p>Nome: <%= @director.name %></p>
    </dt>
    <dd>
      <p>País: <%= @director.country %></p>
    </dd>
    <dd>
      <p>Genero favorito: <%= @director.gender%></p>
    </dd>
    <%= link_to 'Editar', edit_director_path(@director) %>
    
     <% if @movies.present? %> 
        <% @movies.each do |movie| %>
          <dt>
            <p>Title: <%= movie.title %></p>
          </dt>
          <dd>
            <p>Year: <%= movie.year %></p>
          </dd>
          <dd>
            <%= link_to 'Descrição', movie_path(movie) %> 
          </dd>
        <% end %>
    <% else %>
        <p>Sem filmes cadastrados para este diretor.</p>
    <% end %>

</dl>

