<%= form_with model: @movie do | m | %>
  <%= m.label 'Título'%>
  <%= m.text_field :title %>
  <br/>
  <%= m.label 'Ano de Lançamento'%>
  <%= m.number_field :year %>
  <br/>
  <%= m.label 'Sinopse'%>
  <%= m.text_area :synopsis %>
  <br/>
  <%= m.label 'País'%>
  <%= m.text_field :country %>
  <br/>
  <%= m.label 'Duração'%>
  <%= m.number_field :time %>
  <br/>
  <%= m.label 'Direção'%>
  <%= m.collection_select :director_id, Director.all, :id, :name %>
  <br/>
  <%= m.label 'Gênero'%>
  <%= m.collection_select :gender_id, Gender.all, :id, :name %>
  <br/>
  <%= m.submit 'Salvar' %>
<% end %>